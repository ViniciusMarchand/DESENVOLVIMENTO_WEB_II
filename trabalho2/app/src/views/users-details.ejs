<%- include('includes/head') %>

<body class="min-w-screen min-h-screen bg-[#F3F4F6] flex justify-center items-center flex-col pt-[90px]">
    <%- include('includes/nav') %>
    <div class="w-full min-h-full flex justify-center items-center flex-col">
        <div class="bg-[#fdfdfd] border-lg shadow-lg p-4 min-w-[300px] rounded-md mb-[25px]">
            <h1 class="text-center text-[20px] font-bold"> <%= data.title %> </h1>
            <hr class="mb-5 mt-2">
                <div>
                    <p>ID:  <%= data.user.id%></p>
                    <p>Nome: <%= data.user.name%></p>
                    <p>CPF: <%= data.user.cpf%></p>
                    <p>Perfil: <%= data.user.role%></p>
                </div>
        </div>
        <div class="bg-[#fdfdfd] border-lg shadow-lg p-4 min-w-[300px] rounded-md mb-[25px]">
            <h1 class="text-center text-[20px] font-bold"> Emails </h1>
            <hr class="mb-5 mt-2">
                <div>
                    <ul class="list-disc pl-5">
                        <% data.emails.forEach(email => { %>
                            <li><%= email.email %></li>
                        <% }) %>
                    </ul>
                </div>
        </div>
        <div class="bg-[#fdfdfd] border-lg shadow-lg p-4 min-w-[300px] rounded-md mb-[50px]">
            <h1 class="text-center text-[20px] font-bold"> Telefones </h1>
            <hr class="mb-5 mt-2">
                <div>
                    <ul class="list-disc pl-5">
                        <% data.phones.forEach(phone => { %>
                            <li><%= phone.number %></li>
                        <% }) %>
                    </ul>
                </div>
        </div>
    </div>

</body>
</html>